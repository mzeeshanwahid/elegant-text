{
  "compilerOptions": {
      "outDir": "./lib",
      "target": "es5",
      "lib": [
          "es5",
          "es6",
          "dom",
          "dom.iterable",
          "es5",
          "es2015.collection",
          "es2015.iterable"
      ],
      "module": "commonjs",
      "noImplicitAny": true,
      "strictNullChecks": true,
      "removeComments": true,
      "declaration": true,
      "sourceMap": true,
      "jsx": "react",
      "typeRoots": [
          "index.d.ts",
          "node_modules/@types"
      ]
  },
  "include": [
      "src",
      "index.d.ts"
  ],
  "exclude": [
      "node_modules",
      "**/__tests__/*"
  ]
}